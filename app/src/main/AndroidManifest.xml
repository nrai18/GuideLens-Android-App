<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for navigation -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Microphone permission for voice commands -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Internet permission (if needed for any online features) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: Keep screen on during navigation -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Vibration for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- S23 Hardware Features -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- OpenGL ES 3.2 for GPU acceleration -->
    <uses-feature android:glEsVersion="0x00030002" android:required="true" />

    <!-- Neural Networks API support -->
    <uses-feature android:name="android.hardware.neuralnetworks" android:required="false" />

    <!-- REQUIRED for Android 11+ (API 30) to see Speech Recognition Service -->
    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
        <package android:name="com.google.android.googlequicksearchbox" />
    </queries>

    <application
        android:name=".GuideLensApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuideLensApp"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.GuideLensApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- S23 Performance Optimizations -->
        <meta-data
            android:name="com.samsung.android.camera.extensions"
            android:value="true" />
    </application>
</manifest>
